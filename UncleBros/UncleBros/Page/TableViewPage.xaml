<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UncleBros.Page.TableViewPage">
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection Title="환경설정">
                    <SwitchCell Text="프로그램 시작시 실행" On="True"/>
                    <SwitchCell Text="자동 로그인"/>
                </TableSection>
                
                <TableSection Title="Env." TextColor="DimGray">
                    <SwitchCell Text="Execute program on" On="True"/>
                    <SwitchCell Text="Auto Login"/>
                </TableSection>

            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>